{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/index.js",
  "prviate": true,
  "license": "MIT",
  "scripts": {
    "start": "node src",
    "dev": "set NODE_ENV=development&&nodemon src"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "extends": "airbnb-base",
    "rules": {
      "no-plusplus": 0,
      "linebreak-style": 0,
      "consistent-return": 0,
      "object-curly-newline": 0,
      "array-bracket-spacing": 0,
      "implicit-arrow-linebreak": 0,
      "no-new": 0,
      "no-restricted-globals": 0,
      "no-console": 0,
      "func-names": 0,
      "space-before-function-paren": 0,
      "no-underscore-dangle": 0,
      "require-await": 1,
      "quotes": [
        "error",
        "single"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "semi": [
        "error",
        "always"
      ],
      "eol-last": [
        "error",
        "always"
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1
        }
      ]
    },
    "env": {
      "commonjs": true,
      "node": true,
      "es6": true
    }
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcrypt": "^4.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.3",
    "hpp": "^0.2.3",
    "http-errors": "^1.7.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.3",
    "morgan": "^1.9.1",
    "sanitize-html": "^1.22.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "nodemon": "^2.0.2"
  }
}